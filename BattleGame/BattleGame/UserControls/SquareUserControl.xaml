<UserControl x:Class="BattleGame.UserControls.SquareUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattleGame.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="60" MouseDown="UpdateChosenSquare">
    <Grid x:Name="mainGrid" Background="#FF60A5F9">
        <Border x:Name="border" Background="LightYellow" BorderBrush="CadetBlue" BorderThickness="2,2,2,2">
        </Border>
        <Label  x:Name="Value" Content="N" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Height="60" Width="60" FontWeight="Bold" FontSize="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
